<div class="piknik-home-container">
  <div class="piknik-form-container">
    <h1>Create a New Piknik</h1>
    <p>Fill out the details below to plan your perfect outdoor gathering</p>

    <%= form_with(model: @event, local: true, class: "piknik-form") do |form| %>
      <% if @event.errors.any? %>
        <div class="error-messages">
          <h2><%= pluralize(@event.errors.count, "error") %> prevented this piknik from being saved:</h2>
          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Event Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Summer Picnic at the Park" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Description" %>
        <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "What's special about this piknik? Add details your guests should know..." %>
      </div>

      <div class="form-group">
        <%= form.label :date, "Date & Time" %>
        <%= form.datetime_local_field :date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :location, "Location" %>
        <%= form.text_field :location, class: "form-control", placeholder: "Golden Gate Park, San Francisco" %>
      </div>

      <div class="form-group">
        <%= form.label :theme, "Theme" %>
        <%= form.text_field :theme, class: "form-control", placeholder: "Summer BBQ, Taco Tuesday, etc." %>
        <small class="form-text text-muted">Set a theme to guide your guests on what types of dishes to bring</small>
      </div>

      <div class="form-info">
        <p>After creating your piknik, you'll be able to add specific dishes with required quantities for participants to sign up for!</p>
      </div>

      <div class="form-actions">
        <%= form.submit "Create Piknik", class: "piknik-cta-button create" %>
        <%= link_to "Cancel", root_path, class: "cancel-link" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .piknik-form-container {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }
  
  .piknik-form-container h1 {
    margin-bottom: 0.5rem;
    color: #333;
  }
  
  .piknik-form-container p {
    color: #666;
    margin-bottom: 2rem;
  }
  
  .piknik-form .form-group {
    margin-bottom: 1.5rem;
  }
  
  .piknik-form label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #333;
  }
  
  .piknik-form .form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-sizing: border-box;
  }
  
  .piknik-form textarea.form-control {
    resize: vertical;
  }
  
  .error-messages {
    color: #dc3545;
    background-color: #f8d7da;
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: 8px;
  }
  
  .error-messages h2 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  
  .form-info {
    margin-top: 1.5rem;
    padding: 1rem;
    border-radius: 8px;
    background-color: #e6f7ff;
    border: 1px solid #91d5ff;
  }
  
  .form-info p {
    color: #1890ff;
    margin-bottom: 0;
  }
  
  .form-text.text-muted {
    font-size: 0.85rem;
    color: #666;
    margin-top: 0.3rem;
  }
  
  .form-actions {
    display: flex;
    align-items: center;
    margin-top: 2rem;
  }
  
  .cancel-link {
    margin-left: 1rem;
    color: #666;
    text-decoration: none;
  }
  
  .cancel-link:hover {
    text-decoration: underline;
  }
  
  input[type="submit"].piknik-cta-button {
    border: none;
    cursor: pointer;
  }
</style>
