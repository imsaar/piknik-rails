<div class="piknik-home-container">
  <div class="event-details-container">
    <% if notice.present? %>
      <div class="notice-message">
        <%= notice %>
      </div>
    <% end %>

    <div class="event-header">
      <h1><%= @event.name %></h1>
      <div class="event-code">
        <span>Event Code:</span>
        <strong><%= @event.code %></strong>
        <button class="copy-button" onclick="copyEventCode()">Copy</button>
      </div>
    </div>

    <div class="event-info-grid">
      <div class="event-info-card">
        <div class="icon">üìÖ</div>
        <div class="info">
          <h3>Date & Time</h3>
          <p><%= @event.date.strftime("%A, %B %d, %Y at %I:%M %p") %></p>
        </div>
      </div>

      <div class="event-info-card">
        <div class="icon">üìç</div>
        <div class="info">
          <h3>Location</h3>
          <p><%= @event.location %></p>
        </div>
      </div>
    </div>

    <div class="event-description">
      <h2>About this Piknik</h2>
      <p><%= @event.description.present? ? @event.description : "No additional details provided." %></p>
    </div>

    <div class="event-actions">
      <div class="share-piknik">
        <h3>Share this Piknik</h3>
        <p>Invite friends by sharing this event code: <strong><%= @event.code %></strong></p>
        <button class="piknik-cta-button join" onclick="copyEventCode()">Copy Event Code</button>
      </div>
    </div>
  </div>
</div>

<script>
  function copyEventCode() {
    const code = "<%= @event.code %>";
    navigator.clipboard.writeText(code).then(function() {
      alert("Event code copied to clipboard!");
    }, function() {
      alert("Failed to copy event code");
    });
  }
</script>

<style>
  .event-details-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .notice-message {
    background-color: #d4edda;
    color: #155724;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .event-header h1 {
    margin: 0;
    color: #333;
    font-size: 2.2rem;
  }

  .event-code {
    background: #f8f9fa;
    padding: 0.5rem 1rem;
    border-radius: 30px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .event-code strong {
    font-size: 1.2rem;
    letter-spacing: 1px;
  }

  .copy-button {
    background: #6a11cb;
    color: white;
    border: none;
    padding: 0.3rem 0.7rem;
    border-radius: 20px;
    cursor: pointer;
    font-size: 0.9rem;
  }

  .event-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .event-info-card {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .event-info-card .icon {
    font-size: 2rem;
  }

  .event-info-card .info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    color: #666;
  }

  .event-info-card .info p {
    margin: 0;
    font-weight: 500;
    color: #333;
  }

  .event-description {
    margin-bottom: 2rem;
  }

  .event-description h2 {
    color: #333;
    margin-bottom: 1rem;
  }

  .event-actions {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 12px;
  }

  .share-piknik h3 {
    margin-top: 0;
    color: #333;
  }

  .share-piknik p {
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .event-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
